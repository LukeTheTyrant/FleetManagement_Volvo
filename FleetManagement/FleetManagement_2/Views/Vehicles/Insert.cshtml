@model FleetManagement.DTOs.CreateVehicleDto

<h1>Insert New Vehicle</h1>


<form method="post">
    <div class="mt-3">
        <label class="form-label">Chassis Series</label>
        <input type="text" class="form-control" asp-for="ChassisSeries" />
    </div>

    <div class="mt-3">
        <label class="form-label">Chassis Number</label>
        <input type="text" class="form-control" asp-for="ChassisNumber"/>
    </div>

    <div class="form-group mb-2">
        <label>Type</label>
        <select name="Type" class="form-control" asp-for="Type">
            <option>Car</option>
            <option>Truck</option>
            <option>Bus</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">Color</label>
        <input type="text" class="form-control" asp-for="Color"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>