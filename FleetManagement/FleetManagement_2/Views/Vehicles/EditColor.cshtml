@model FleetManagement.DTOs.VehicleDto;

<h1>Edit Vehicle</h1>


<form method="post">
    <div class="mt-3">
        <label class="form-label">Chassis Series</label>
        <input type="text" disabled class="form-control" asp-for="ChassisSeries" />
    </div>

    <div class="mt-3">
        <label class="form-label">Chassis Number</label>
        <input type="text" disabled class="form-control" asp-for="ChassisNumber" />
    </div>

    <div class="mt-3">
        <label class="form-label">Type</label>
        <input type="text" disabled class="form-control" asp-for="Type" />
    </div>

    <div class="mt-3">
        <label class="form-label">Number of Passengers</label>
        <input type="text" disabled class="form-control" asp-for="PassengersNumber" />
    </div>

    <div class="mt-3">
        <label class="form-label">Color</label>
        <input type="text" class="form-control" asp-for="Color" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>